@model IEnumerable<Famer.Entity.Model.Comment_Top>

@if(Model==null || Model.Sum(e => e.Comment_Top_ID)== 0)
{
    <div>
        无人评论！
    </div>
}
else
{ 
foreach(var item in Model)
{
        <div id="showcom" class="comment-show-con clearfix">
            <div class="comment-show-img pull-left">
                <img src="~/Images/文章图片/让农业生产不再难.png" />
            </div>
            <div class="comment-show-text pull-left clearfix">
                <div class="p1-content">
                    <span>@item.UserID</span>
                    <span>@item.Content</span>
                </div>
                <div class="comment-oper">
                    <span></span>
                    <div>
                    </div>
                </div>
            </div>
        </div>
    }
}

