
@using Famer.Entity.Model
@model Famer.Entity.ViewModel.ProviderViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sort</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/功能主页搜索栏.css" rel="stylesheet" />
    <link href="~/Content/css/功能主页导航栏.css" rel="stylesheet" />
    <link href="~/Content/css/供应信息详情信息.css" rel="stylesheet" />
    <link href="~/Content/css/供应大厅分类导航栏.css" rel="stylesheet" />
</head>
<body>
    @*分类导航栏*@
    <div class="selete clearfix">
        <div class="shangpi clearfix" id="accordion">
            <ul class="category-1">
                <li class="li-1-1">
                    @Ajax.ActionLink("全部", "Index", "Provider", null)
                </li>
                @foreach (MainClass p in Model.mainclass)
                {
                    <li>
                        @Ajax.ActionLink(p.ClassName, "Index", "Provider", new { genreInfoFrom = p.ClassName }, new AjaxOptions()
                   {
                       UpdateTargetId = "ui-hotVisa-prolist",
                       InsertionMode = InsertionMode.Replace,
                       HttpMethod = "GET"
                   })
                    </li>
                }
            </ul>
        </div>
        @*<div id="collapseOne" class="collapse in">
                <ul>
                    <li class="li-1-3" cateId="2000002"><a href="#">新鲜水果</a></li>
                </ul>
            </div>*@

        <div class="diqu clearfix">
            <ul class="category-2">
                <li class="li-2-1" cateId>@Ajax.ActionLink("地区", "Index", "Provider", null)</li>
                @foreach (Address2 p in Model.address2)
                {
                    <li>
                        @Ajax.ActionLink(p.Address_Of_Sup, "Index", "Provider", new { SortInfoFrom = p.Address_Of_Sup.Trim()
                   }, new AjaxOptions()
                   {
                       UpdateTargetId = "ui-hotVisa-prolist",
                       //InsertionMode = InsertionMode.Replace,
                       //HttpMethod = "GET"
                   })
                    </li>
                }
            </ul>
        </div>
        <div class="riqi clearfix">
            <ul class="category-3">
                <li class="li-3-1" cateId><a href="#">日期</a></li>
                <li class="li-2" cateId="2000001"><a href="#">30天内</a></li>
                <li class="li-3" cateId="2000002"><a href="#">15天内</a></li>
                <li class="li-3" cateId="2000002"><a href="#">7天内</a></li>
                <li class="li-3" cateId="2000002"><a href="#">3天内</a></li>
                <li class="li-3" cateId="2000002"><a href="#">2天内</a></li>
                <li class="li-3" cateId="2000002"><a href="#">1天内</a></li>
            </ul>
        </div>
    </div>
</body>
</html>
